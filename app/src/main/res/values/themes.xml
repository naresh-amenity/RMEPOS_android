<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.myTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--    <style name="Theme.myTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.myTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />x

    <style name="Theme.myTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.myTheme.NoActionBar">
        <item name="android:fontFamily">@font/roboto_regular</item>
<!--        <item name="android:fontFamily">@font/poppins_regular</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--                <item name="popupTheme">@style/popupMenuStyle</item>-->
        <item name="android:popupTheme">@style/popupMenuStyle</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/clr_White</item>
        <item name="android:textSize">15sp</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

    <style name="Theme.myTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.myTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MYDIALOG" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="MYDIALOGNoAnim" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="MYDIALOG_White" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/clr_White</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/clr_White</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="editext" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorHint">@color/clr_Dark_Gray</item>
        <item name="android:textColor">@color/clr_Black</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/clr_Dark_Gray</item>
        <item name="colorControlNormal">@color/clr_Dark_Gray</item>
        <item name="colorControlActivated">@color/clr_Dark_Gray</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/clr_Dark_Gray</item>
        <item name="hintTextColor">@color/clr_Dark_Gray</item>
        <item name="helperTextTextColor">@color/clr_Dark_Gray</item>
        <item name="errorTextColor">@color/clr_read</item>
        <item name="android:textColorHint">@color/clr_Dark_Gray</item>
        <item name="android:textColor">@color/clr_Black</item>
        <item name="background">@color/clr_Black</item>
        <item name="android:textSize">15sp</item>
        <item name="colorAccent">@color/clr_Dark_Gray</item>
        <item name="colorControlNormal">@color/clr_Dark_Gray</item>
        <item name="colorControlActivated">@color/clr_Dark_Gray</item>
    </style>

    <style name="TextInputLayoutStyleDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary99</item>
        <item name="hintTextColor">@color/colorPrimary99</item>
        <item name="android:textColorHint">@color/colorPrimary99</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="colorAccent">@color/colorPrimary99</item>
        <item name="colorControlNormal">@color/colorPrimary99</item>
        <item name="colorControlActivated">@color/colorPrimary99</item>
        <item name="colorOnSurface">@color/colorPrimary99</item>
        <item name="colorPrimary">@color/colorPrimary99</item>
    </style>
    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>    <!-- set your color -->
    </style>
    <style name="switchStyleWhite" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/clr_White</item>
        <item name="colorPrimaryDark">@color/clr_White</item>
        <item name="colorAccent">@color/clr_White</item>    <!-- set your color -->
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/clr_Gray3</item>
        <item name="colorControlActivated">@color/clr_Orange</item>
    </style>
